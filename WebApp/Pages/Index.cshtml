@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    //Services.Developer developer = new Services.Developer();
    //Services.Project project = new Services.Project();
}

<div class="text-center">
    <h1 class="display-4">Projects & Developers</h1>
    <div class="col">
        <table id="tableItems" class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="text-center bg-info text-white">
                    <th>ID</th>
                    <th>Name Project</th>
                    <th>Status</th>
                    <th>Added Date</th>
                    <th colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AllProjects)
                {
                <tr>
                    <td>@Html.DisplayFor(modelitem => item.id)</td>
                    <td>@Html.DisplayFor(modelitem => item.name)</td>
                    @if (item.isActive)
                    {
                        <td>Active</td>
                    }
                    else
                    {
                        <td>Inactive</td>
                    }
                    <td>@Html.DisplayFor(modelitem => item.addedDate)</td>
                    <td>
                        <button type="button" class="btn btn-info" onclick="GetProject(@item.id)" data-folio="@item.id" data-toggle="modal" data-target="#detailsModal">
                            Details
                        </button>
                    </td>
                    <td><button type="button" data-folio="@item.id" class="btn btn-danger">Eliminar</button></td>
                </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Project Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="row justify-content-between p-1">
                        <div class="col-md-4">
                            <span>
                                ID
                            </span>
                            <input class="form-control" disabled id="id" value="id" />
                        </div>
                        <div class="col-md-8">
                            <span>
                                Name
                            </span>
                            <input class="form-control" disabled id="name" value="name" />
                        </div>
                    </div>


                    <div class="row justify-content-between p-1">
                        <div class="col-md-4">
                            <span>
                                Status
                            </span>
                            <input class="form-control" disabled id="status" value="status" />
                        </div>
                        <div class="col-md-8">
                            <span>
                                Added Date
                            </span>
                            <div class="input-group">
                                <input id="addedDate" type="text" disabled class="form-control" value="@DateTime.Now">
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-between p-1">
                        <div class="col-md-6">
                            <span>
                                Effort Require In Days
                            </span>
                            <input class="form-control" disabled id="effort" value="effort" />
                        </div>
                        <div class="col-md-6">
                            <span>
                                Development Cost
                            </span>
                            <input class="form-control" disabled id="cost" value="cost" />
                        </div>
                    </div>
                    <h5 class="modal-title" id="exampleModalLabel">Developers</h5>
                    <div class="row justify-content-between p-1">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr class="text-center bg-info text-white small">
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Added Date</th>
                                    <th>Cost By Day</th>
                                </tr>
                            </thead>
                            <tbody id="tableContainer">
                                <tr class="text-center" id="test2">
                                    <td>
                                    </td>
                                    <td>
                                    </td>
                                    <td>
                                    </td>
                                    <td>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>


